---

<LayoutProyecto title="DÃ­a 9" subtitle="Sound Board">
<div class="container">
  {
    sounds.map((sound, i) => (
      <audio id={sound.name} src={sound.url} class="sound"></audio>
    ))
  }

  <div id="buttons">
    {
      sounds.map((sound, i) => (
        <button class="btn">
          {sound.name} 
        </button>
      ))
    }
  </div>

</div>
</LayoutProyecto>

