          pattern="[0-9]"
          class="number"
          required
        />
        <input
          type="number"
          placeholder="0"
          maxlength="1"
          pattern="[0-9]"
          class="number"
          required
        />
        <input
          type="number"
          placeholder="0"
          maxlength="1"
          pattern="[0-9]"
          class="number"
          required
        />
        <input
          type="number"
          placeholder="0"
          maxlength="1"
          pattern="[0-9]"
          class="number"
