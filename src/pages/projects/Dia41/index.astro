<style>
  .dia41 {
    min-height: 70vh;
    display: grid;
    place-content: center;
    text-align: center;
  }

  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    appearance: none;
  }

  .dia41 .verifyBox {
    height: 400px;
    width: 600px;
    border: 2px solid var(--naranja);
    background-color: var(--naranja-claro);
    border-radius: 16px;
    display: flex;
    justify-content: space-evenly;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    color: #fff;
    padding: 1rem;
    font-weight: bold;
  }

  .verifyBox h1 {
    font-size: x-large;
  }

  .numbers {
    display: flex;
    gap: 5px;
    padding: 10px;
    width: 100%;
  }

  .number {
    color: #000;
    text-align: center;
    font-size: 4rem;
    width: 100%;
    font-weight: normal;
    outline-color: var(--celeste-oscuro);
    border: 3px solid transparent;
  }

  .footer {
    background-color: var(--naranja-muy-claro);
    font-size: small;
    padding: 1rem;
    border-radius: 16px;
    margin: 0rem 2rem;
    text-wrap: pretty;
  }

  .number:valid {
    border-color: var(--celeste-oscuro);
    box-shadow: 0 2px 2px #aaa;
  }

  @media (max-width: 600px) {
    .dia41 .verifyBox {
      height: 400px;
      width: 360px;
    }

    .number {
      font-size: 3rem;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const $ = (selector) => {
      return document.querySelector(selector);
    };
    const $$ = (selector) => {
      return document.querySelectorAll(selector);
    };

    const inputNumbers = $$(".number");

    inputNumbers.forEach((number, i, numbers) => {
      number.addEventListener("input", (e) => {

        if (i < numbers.length - 1 && number.value !== "") {
          numbers[i + 1].focus();
        }

        if (number.value !== "" && i == numbers.length - 1) {
          number.blur();
        }

        if (number.value) {
          number.value = e.data;
        }
      });

      number.addEventListener("keydown", (e) => {
        if (e.key === "Backspace" && number.value === "" && i > 0) {
          numbers[i - 1].focus();
        }
      });
    });
  });
</script>
