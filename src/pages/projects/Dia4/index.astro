---

<LayoutProyecto title="DÃ­a 4" subtitle="Hidden Search">
  <div class="container">
    <div class="search">
      <input  placeholder="Search..." type="text" name="search-bar" id="search-bar" class="search-bar"/>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        style="fill: currentColor"
        class="search-icon"
        ><path
          d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
        ></path>
        </svg>
    </div>
  </div>
</LayoutProyecto>

<style>
  .container {
    display: grid;
    place-items: center;
    background-color: var(--celeste);
    height: 71vh;
  }

  .search {
    display: flex;
    align-items: center;
  }

  .search-bar {
    outline: none;
    border: none;
    background-color: #fff;
    height: 58px;
    width: 0px;
    padding: 0px;
    transition: all 0.3s ease-in-out;
  }

  .search-bar.show {
    padding: 10px;
    width: 350px;
  }

  @media (max-width: 500px) {
    .search-bar.show
    {
      width: 250px;
    }
    }

  .search-icon {
    background-color: #fff;
    color:#575757;
    height: 58px;
    width: 58px;
    padding: 11px;
    cursor: pointer;
  }
</style>

<script>
    document.addEventListener("astro:page-load", () => {
      const iconSearch = document.querySelector(".search-icon");
      const barSearch = document.querySelector(".search-bar");
      const input = document.querySelector("input");

    iconSearch.addEventListener("click", () => {
      barSearch.classList.toggle("show");
      input.focus();
    });
  });
</script>