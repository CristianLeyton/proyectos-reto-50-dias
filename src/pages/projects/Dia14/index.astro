---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="DÃ­a 14" subtitle="Animated Navigation">
  <div class="container dia14">
    <div class="segundoContainer">
      <nav>
        <ul class="list">
          <li class="item"><a href="#">Home</a></li>
          <li class="item"><a href="#">Works</a></li>
          <li class="item"><a href="#">About</a></li>
          <li class="item"><a href="#">Contact</a></li>
        </ul>
        <button class="cross">
          <div class="linea1"></div>
          <div class="linea2"></div>
        </button>
      </nav>
    </div>
    <div class="top"></div>
    <div class="bottom"></div>
  </div>
</LayoutProyecto>

<style is:inline>
  .segundoContainer {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .segundoContainer ul {
    width: 262px;
    transition: width 0.7s linear;
    display: flex;
    gap: 1rem;
    padding: 1rem 0 1rem 1rem;
    text-align: center;
  }

  .segundoContainer ul.ocultar {
    padding: 1rem 0rem;
    width: 0px;
    transform: translateX(1rem);
  }

  .dia14 nav {
    top: 45.5%;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 3px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-wrap: nowrap;
  }
  .dia14 nav li {
    transition: all 0.7s linear;
    opacity: 1;
  }

  .dia14 nav li.ocultar {
    opacity: 0;
    transform-origin: right;
    transform: rotateY(360deg);
  }

  .dia14 {
    display: flex;
    height: 70vh;
    flex-direction: column;
    position: relative;
  }

  .top,
  .bottom {
    flex: 1;
  }

  .top {
    background-color: var(--celeste-claro);
  }

  .bottom {
    background-color: var(--celeste-oscuro);
  }

  .dia14 button {
    width: 22px;
    position: relative;
    padding: 0 2rem 0 0.75rem;
  }
  .linea1,
  .linea2 {
    width: 100%;
    width: 20px;
    height: 2px;
    background-color: var(--celeste-oscuro);
    transform-origin: middle;
    position: absolute;
    transition: all 0.7s linear;
  }

  .linea1 {
    transform: rotate(45deg);
  }

  .linea2 {
    transform: rotate(-45deg);
  }

  .linea1.ocultar {
    transform: rotate(720deg);
    top: 45%;
  }
  .linea2.ocultar {
    transform: rotate(-720deg);
    top: 55%;
  }

  @media (max-width: 500px) {
    .container {
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    let items = document.querySelectorAll(".item");
    const list = document.querySelector(".list");
    const cross = document.querySelector(".cross");
    const linea1 = document.querySelector(".linea1");
    const linea2 = document.querySelector(".linea2");

    cross.addEventListener("click", () => {
      items.forEach((item) => {
        item.classList.toggle("ocultar");
      });
      list.classList.toggle("ocultar");
      linea1.classList.toggle("ocultar");
      linea2.classList.toggle("ocultar");
    });
  });
</script>
