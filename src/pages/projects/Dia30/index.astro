---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="DÃ­a 30" subtitle="Auto Text Effect">
  <div class="container dia30">
    <p class="text">We Love Programming!</p>
    <label for="" class="label">
      Speed:
      <input type="number" name="" id="speed" value="1" min="1" max="10" />
    </label>
  </div>
</LayoutProyecto>

<style is:inline>
  .dia30 {
    min-height: 70vh;
    display: grid;
    background-color: var(--naranja);
    color: #fff;
    padding: 1rem;
    grid-template-columns: 1fr;
    place-items: center;
    align-items: end;
  }

  .text {
    font-size: xx-large;
    text-align: center;
  }

  .label {
    background-color: var(--naranja-claro);
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-around;
    max-width: 200px;
    gap: 10px;
  }
  .label input {
    color: #000;
    width: fit-content;
    display: inline-block;
    padding: 0.5rem;
    outline: none;
    width: 50px;
    text-align: center;
  }

  @media (max-width: 600px) {
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const textOriginal = document.querySelector(".text");
    const speedInput = document.querySelector("#speed");

    if (textOriginal && speedInput) {
      let text = textOriginal.textContent.toString();


    console.log(text);

    //@ts-ignore
    let speed = speedInput.value * 250;

    speedInput.addEventListener("change", (e) => {
      //@ts-ignore
      speed = 500 / speedInput.value;
    });

    let j = 1;
    function writing() {
      textOriginal.textContent = text.slice(0, j);
      j++;
      if (j > text.length) {
        j = 1;
      }
      setTimeout(writing, speed);
    }
    writing();
    }

    
  });
</script>
