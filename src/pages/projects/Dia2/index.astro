---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="DÃ­a 2" subtitle="Progress Steps">
  <section>
    <div id="barra">
      <div id="progreso"></div>
      <div id="progresoTotal"></div>
      <span class="active">1</span>
      <span>2</span>
      <span>3</span>
      <span>4</span>
      <span>5</span>
    </div>

    <div id="botones">
      <button id="btnPrev">Prev</button>
      <button id="btnNext">Next</button>
    </div>
  </section>
</LayoutProyecto>

<style>

  :root {
    --active: #3498db;
    --inactive: #eee;
  }  

  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
  }

  #barra {
    margin: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 350px;
    position: relative;
  }

  #progreso {
    position: absolute;
    width: 100%;
    height: 3px;
    background: var(--inactive);
    z-index: -10;
  }

  #progresoTotal {
    position: absolute;
    width: 0;
    height: 3px;
    background: var(--active);
    z-index: -5;
    transition: all 0.4s linear;
  }

  #botones {
    display: flex;
    width: fit-content;
    gap: 0.75rem;
  }

  span {
    display: block;
    background: #fff;
    border-radius: 50%;
    border: 3px solid var(--inactive);
    width: 30px;
    text-align: center;
    transition: border 0.4s ease-in;
  }

  span.active {
    border: 3px solid var(--active);
  }
  button {
    background-color: var(--active);
    color: #fff;
    padding: 8px 30px;
    border-radius: 6px;
  }

  button:active {
    transform: scale(0.96);
  }

  button:disabled {
    background-color: var(--inactive);
    cursor: not-allowed;
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const btnPrev = document.querySelector("#btnPrev");
    const btnNext = document.querySelector("#btnNext");
    const barra = document.querySelector("#barra");
    let secciones = barra.childElementCount - 3; //Le resto tres porque no cuenta el primer elemento que no se ve. Y la barra se divide en el total de secciones -1
    const progresoTotal = document.querySelector("#progresoTotal");
    let porcentajeAvance = 100 / secciones;
    let porcentajeActual = 0;
    const pasos = document.querySelectorAll("#barra span");
    let pasoActual = 0; //Empiezo por el 0 porque asi empiezan los arrays y el "pasos" es un array

    //Boton Next Step
    btnNext.addEventListener("click", () => {
      if (porcentajeActual < 100) {
        pasoActual += 1;
        porcentajeActual += porcentajeAvance;
        pasos[pasoActual].classList.add("active");
        progresoTotal.setAttribute("style", `width: ${porcentajeActual}%;`);
      }

      if (porcentajeActual >= 100) {
        btnNext.setAttribute("disabled", "");
      }

      if (porcentajeActual > 0) {
        btnPrev.removeAttribute("disabled");
      }
    });

    //Boton Prev Step
    if (porcentajeActual <= 0) {
      btnPrev.setAttribute("disabled", "");
    }

    btnPrev.addEventListener("click", () => {
      if (porcentajeActual > 0) {
        porcentajeActual -= porcentajeAvance;
        pasos[pasoActual].classList.remove("active");
        pasoActual -= 1;
        progresoTotal.setAttribute("style", `width: ${porcentajeActual}%;`);
      }

      if (porcentajeActual <= 0) {
        btnPrev.setAttribute("disabled", "");
      }

      if (porcentajeActual < 100) {
        btnNext.removeAttribute("disabled");
      }
    });
  });
</script>
