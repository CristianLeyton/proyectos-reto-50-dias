<style>
  .dia25 {
    margin-top: 1rem;
    height: 70vh;
    overflow-y: scroll;
  }

  .dia25 header {
    position: sticky;
    left: 0;
    top: -2px;
    z-index: 9;
  }

  .dia25 nav {
    background-color: #222222;
    display: flex;
    color: #fff;
    justify-content: space-between;
    padding: 1rem 2rem;
    align-items: center;
    transition: background 0.3s ease-in-out,
    padding 0.3s ease-in-out;
  }

  .dia25 nav.active {
    background-color: #fff;
    color: #222222;
    padding: 0.5rem 2rem;
    border-bottom: 2px solid var(--naranja-oscuro);
  }


  .dia25 .logo {
    font-size: x-large;
    &:hover {
      color: var(--naranja-oscuro);
    }
  }

  .dia25 nav ul {
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;

    & li {
      cursor: pointer;
      transition: 0.15s all ease-in-out;
    }

    & li:hover {
      color: var(--naranja-oscuro);
    }
  }

  .activeNav {
    color: var(--naranja-oscuro);
    font-weight: bold;
  }

  .dia25 .hero {
    background-image: url("./fondo.jpeg");
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    height: 65dvh;
    color: #fff;
    position: relative;
    display: grid;
    place-content: center;
    text-align: center;
    padding: 0 2rem;
    text-wrap: pretty;

    & h1 {
      font-size: xx-large;
      font-weight: bold;
      z-index: 1;
    }

    & p {
      font-size: large;
      z-index: 1;
    }

    &::after {
      content: "";
      position: absolute;
      inset: 0;
      background-color: #00000070;
      z-index: 0;
    }
  }

  .contents {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
  }

  .content {
    & h2 {
      font-size: large;
      font-weight: bold;
    }

    & p {
      font-size: small;
      text-wrap: pretty;
    }
  }

  @media (max-width: 600px) {
    .dia25 .logo {
      font-size: large;
      &:hover {
        color: var(--naranja-oscuro);
      }
    }

    .dia25 nav {
      padding: 1rem 0.75rem;
    }

    .dia25 nav.active {
      padding: 0.5rem 0.75rem;
    }


    .dia25 nav ul {
      display: flex;
      justify-content: space-between;
      gap: 0.8rem;

      & li {
        cursor: pointer;
        transition: 0.15s all ease-in-out;
        font-size: small;
      }

      & li:hover {
        color: var(--naranja-oscuro);
      }
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {

    const container = document.querySelector('.dia25');


    if (container) {
      container.addEventListener('scroll', function() {
      const header = document.querySelector('.dia25 header nav');
      
      if (container.scrollTop > 100) { // Cambia '50' por la cantidad de píxeles que quieras
        header.classList.add('active');
      } else {
        header.classList.remove('active');
      }
    });

    }


  });
</script>
