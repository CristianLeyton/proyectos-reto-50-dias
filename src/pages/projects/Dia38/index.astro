<style>
  .dia38 {
    min-height: 70vh;
    display: grid;
    place-content: center;
    background-color: var(--celeste);
  }

  .dia38 .screen {
    background-color: #fff;
    height: 500px;
    width: 320px;
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: end;
    border-radius: 1rem;
    border: 3px solid #fff;
    overflow: hidden; 
    transition: background 0.2s ease-in;
  }

  .screen .nav {
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    color: #555555;
    width: 100%;
    font-size: small;
    padding: 0.7rem 1rem ;
  }

  .nav li {
    display: flex;
    align-items: center;
    flex-direction: column;
    cursor: pointer;
  }


  .aboutUsBg {
    background: url('./aboutus.avif') center center/cover no-repeat;
  }

  .homeBg {
    background: url('./home.avif') center center/cover no-repeat;
  }
  
  .workBg {
    background: url('./work.avif') center center/cover no-repeat;
  }

  .blogBg {
    background: url('./blog.avif') center center/cover no-repeat;
  }

  .active {
    color: var(--celeste);
    font-weight: bold;
  }

  @media (max-width: 600px) {
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const links = document.querySelectorAll(".nav li");
    const screen = document.querySelector(".dia38 .screen");

    links.forEach((link) => {
      link.addEventListener("click", () => {
        links.forEach((l) => {
          l.classList.remove("active");
        });
        link.classList.add("active");
        
        //@ts-ignore
        switch (link.innerText) {
          case "Home":
          screen.classList.add("homeBg");
          screen.classList.remove("aboutUsBg");
          screen.classList.remove("workBg");
          screen.classList.remove("blogBg");
            break;
            case "Work":
          screen.classList.add("workBg");
          screen.classList.remove("homeBg");
          screen.classList.remove("aboutUsBg");
          screen.classList.remove("blogBg");
            break;
            case "Blog":
          screen.classList.add("blogBg");
          screen.classList.remove("homeBg");
          screen.classList.remove("aboutUsBg");
          screen.classList.remove("workBg");
            break;  
            case "About Us":
          screen.classList.add("aboutUsBg");
          screen.classList.remove("homeBg");
          screen.classList.remove("workBg");
          screen.classList.remove("blogBg");  
            break;
          default: 
          screen.classList.add("homeBg");
          break;
        }

      });
    });

  });
</script>
