---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="DÃ­a 44" subtitle="Custom Range Slider">
  <div class="container dia44">
    <label class="labelRange">
      <input type="range" id="range" />
      <span class="loadBar"></span>
      <span class="glob">50</span>
    </label>
  </div>
</LayoutProyecto>

<style>
  .dia44 {
    min-height: 70vh;
    display: grid;
    place-content: center;
  }

  .labelRange {
    position: relative;
    width: 320px;
  }

  .loadBar {
    position: absolute;
    background-color: var(--celeste-oscuro);
    height: 1rem;
    border-radius: 10px 0 0 10px;
    width: 50%;
    z-index: -1;
    left: 0%;
    top: 1px;
  }

  #range {
    box-sizing: border-box;
    width: 320px;
    height: 1.1rem;
    appearance: none;
    height: 1rem;
    border-radius: 10px;
    cursor: pointer;
    position: relative;
    background-color: transparent;
    box-shadow: inset 0 0 0 1px var(--azul-oscuro);
  }

  .glob {
    position: relative;
    display: grid;
    place-content: center;
    border: 1px solid var(--celeste-oscuro);
    border-radius: 10px;
    color: #000;
    box-shadow: 0 2px 3px #ddd;
    height: 30px;
    width: 40px;
    top: -70px;
    left: calc(50% - 20px);
  }

  input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    height: 30px;
    width: 30px;
    background: #fff;
    border-radius: 50%;
    border: 1px solid var(--azul-oscuro);
    cursor: pointer;
  }

  input[type="range"]::-moz-range-thumb {
    -webkit-appearance: none;
    height: 30px;
    width: 30px;
    background: #fff;
    border-radius: 50%;
    border: 1px solid var(--azul-oscuro);
    cursor: pointer;
  }

  @media (max-width: 600px) {
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const inputRange = document.querySelector("#range");
    const glob = document.querySelector(".glob");
    const loadBar = document.querySelector(".loadBar");

    if (inputRange) {
      inputRange.addEventListener("input", () => {
        //@ts-ignore
        if (inputRange.valueAsNumber > 5 && inputRange.valueAsNumber < 95) {
          //@ts-ignore
          glob.style.left = `calc(${inputRange.valueAsNumber}%  - 20px)`;
          //@ts-ignore
          loadBar.style.width = `${inputRange.valueAsNumber}%`;
        }
        //@ts-ignore
        glob.textContent = inputRange.valueAsNumber;
        //@ts-ignore
        console.log(inputRange.valueAsNumber);
      });
    }
  });
</script>
