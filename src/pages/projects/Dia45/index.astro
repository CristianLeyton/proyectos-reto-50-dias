    <div class="sidebar">
      <div class="blackBox boxNetflix"></div>
      <div class="redBox boxNetflix"></div>
      <div class="whiteBox boxNetflix">
        <div class="headerSidebar">
          <div class="logoNetflix"></div>
          <button class="closeMenu">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: currentColor;transform: ;msFilter:;"><path d="m16.192 6.344-4.243 4.242-4.242-4.242-1.414 1.414L10.535 12l-4.242 4.242 1.414 1.414 4.242-4.242 4.243 4.242 1.414-1.414L13.364 12l4.242-4.242z"></path></svg>
