---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="Día 34" subtitle="Animated Countdown">
  <div class="container dia34">
    <div class="contador">
      <div class="espejo">
        <div class="counter animate"></div>
      </div>
      <p>GET READY</p>
    </div>

    <div class="end hide">
      <div class="go">GO!</div>
      <a href="#" class="reset">Replay</a>
    </div>
  </div>
</LayoutProyecto>

<style is:inline>
  .dia34 {
    min-height: 70vh;
    display: grid;
    place-content: center;

    p {
      display: block;
      font-size: 30px;
      font-weight: bold;
      background-color: #fff;
      z-index: 1;
      width: 90vw;
      text-align: center;
    }
  }

  .espejo {
    transform: rotate(180deg);
    height: 100px;
    overflow: hidden;
    position: relative;
    width: 300px;
    margin: auto;
    display: grid;
    place-content: center;
  }
  .counter {
    position: relative;
    top: -120px;
    text-align: center;
    font-size: 80px;
    color: var(--celeste-oscuro);
    transform-origin: bottom;
  }

  .end {
    text-align: center;
    font-size: 20px;
  }

  .end .reset {
    background-color: var(--celeste-oscuro);
    padding: 10px;
    color: #fff;
    border-radius: 10px;
    &:active {
      transform: scale(0.96);
    }
  }
  .go {
    font-size: 80px;
  }

  @keyframes show {
    from {
      transform: scale(0);
    }

    to {
      transform: scale(1);
    }
  }
  .show {
    animation: show 0.4s ease-in-out both;
  }

  .hide {
    display: none;
  }

  .animate {
    animation: count-animation 1s 0.3s infinite both;
  }

  @keyframes count-animation {
    0% {
      transform: rotate(0deg);
    }

    35% {
      transform: rotate(-180deg);
    }

    40% {
      transform: rotate(-170deg); /* Rebote hacia adelante más suave */
    }

    55% {
      transform: rotate(-185deg); /* Rebote hacia atrás más suave */
    }

    70% {
      transform: rotate(-175deg); /* Otro rebote hacia adelante suave */
    }

    75% {
      transform: rotate(-182deg); /* Otro rebote hacia atrás suave */
    }

    100% {
      transform: rotate(-300deg);
    }
  }

  @media (max-width: 600px) {
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    let start = 3;
    const contador = document.querySelector(".contador");
    const counter = document.querySelector(".counter");
    const end = document.querySelector(".end");

    if (counter) {
      //@ts-ignore
      counter.textContent = start;
      function countdown() {
        if (start >= 0) {
          setTimeout(() => {
            start--;
            //@ts-ignore
            counter.textContent = start;
            countdown();
          }, 1000);
        } else {
          counter.classList.remove("animate");
          contador.classList.add("hidden");
          end.classList.remove("hide");
          end.classList.add("show");
        }
      }
      countdown();
    }
  });
</script>
