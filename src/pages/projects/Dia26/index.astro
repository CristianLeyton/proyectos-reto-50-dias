<style>
  .dia26 {
    height: 525px;
    position: relative;
    display: flex;
    overflow: hidden;
    margin: 2rem 0;
  }

  .slide-left {
    flex: 1;
    height: 100%;
  }

  .slide-right {
    flex: 2;
    height: 100%;
    transform: translateY(-50%);
  }

  .dia26 button {
    padding: 0.6rem;
    color: #ccc;
    background-color: #fff;
    z-index: 1;
    width: 2.5rem;

    &:hover {
      color: #616161;
    }
  }

  .buttons {
    position: absolute;
    display: grid;
    width: 100%;
    height: 100%;
    grid-template-columns: 1fr 2fr;
    align-items: center;
    justify-content: center;
  }

  .btn-left {
    background-color: #252e33;
    border-radius: 5px 0 0 5px;
    margin-top: 40px;
    justify-self: end;
  }

  .btn-right {
    background-color: #537283;
    border-radius: 0 5px 5px 0;
    justify-self: start;
    margin-top: -40px;
  }

  .text {
    height: 100%;
    display: grid;
    place-content: center;
    color: #fff;
    text-align: center;
    padding: 0 1rem;

    & h1 {
      font-size: xx-large;
      font-weight: bold;
    }
  }

  .text1 {
    background: #fd3555;
  }

  .text2 {
    background: #2a86ba;
  }

  .text3 {
    background: #252e33;
  }

  .text4 {
    background: #ffb866;
  }

  .image {
    height: 100%;
  }

  .image1 {
    background: url("./src/imagen1.avif") center center/cover;
  }

  .image2 {
    background: url("./src/imagen2.avif") center center/cover;
  }

  .image3 {
    background: url("./src/imagen3.avif") center center/cover;
  }

  .image4 {
    background: url("./src/imagen4.avif") center center/cover;
  }

  @media (max-width: 600px) {
  }
</style>

