        </main>
      </section>

      <!-- Pista caja -->
      <section class="box-pista hide">
        <main>
          <h2 class="title">Pista <span class="acertijo-numero">00</span></h2>
          <p id="pista" class="pista">Aqui va la pista...</p>
          <div class="buttons-actions">
            <button id="btnAcertijo" class="btn btnAcertijo">
              Ver acertijo
            </button>
            <button id="btnRespuesta" class="btn btnRespuesta">
              Ver respuesta
