      <!-- Respuesta caja -->
      <section class="box-respuesta hide">
        <main>
          <h2 class="title">
            Respuesta <span class="acertijo-numero">00</span>
          </h2>
          <p id="respuesta" class="respuesta">Aqui va la respuesta...</p>
          <div class="buttons-actions">
            <button id="btnAcertijo" class="btn btnAcertijo">
              Ver acertijo
