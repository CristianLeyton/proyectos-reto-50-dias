<style>
  .dia51 {
    min-height: 70vh;
    display: grid;
    place-content: center;
  }

  .container {
    display: flex;
    min-height: 70vh;
    justify-content: center;
    align-items: center;
    position: relative;
    flex-direction: column;
  }

  header {
    position: sticky;
    top: 0;
    width: fit-content;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1rem 0rem 1rem;

    input {
      width: 4rem;
      text-align: center;

    }

    button {
      transform: rotate(90deg) scale(1.4);
      margin-top: 1px;
      margin-left: 4px;
      margin-right: 6px;
    }
  }

  .container-fondo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--celeste);
    z-index: -2;
  }

  .box,
  .box-pista,
  .box-respuesta {
    margin: 30px 10px;
    background-color: #f8fafc;
    border-radius: 12px;
    box-shadow:
      0 10px 20px rgba(0, 0, 0, 0.1),
      0 6px 6px rgba(0, 0, 0, 0.1);

    & main {
      display: flex;
      gap: 0.5rem;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      width: 400px;
      min-height: 320px;
      height: max-content;
    }
  }

  .title {
    font-weight: bolder;
    color: var(--text-color-secondary);
  }

  .acertijo,
  .pista,
  .respuesta {
    text-align: center;
    color: var(--text-color);
    text-wrap: pretty;
    font-size: large;
    font-weight: bold;
    height: fit-content;
    padding: 1rem;
  }

  .btn {
    background-color: var(--naranja-claro);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: #fff;
    font-weight: bold;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);

    &:hover {
      transform: scale(1.02);
    }

    &:active {
      transform: scale(0.99);
    }
  }

  .buttons-actions {
    display: flex;
    gap: 1rem;
    font-size: small;
  }

  .box {
    transition: all 0.5s ease-in-out;
    position: relative;
  }
  .box-pista,
  .box-respuesta {
    transform: rotateY(-180deg);
    transition: all 0.5s ease-in-out;
    opacity: 0;
    position: absolute;
  }

  .hide {
    transform: rotateY(180deg);
    opacity: 0;
    z-index: -1;
  }

  .show {
    transform: rotateY(0deg);
    opacity: 1;
    z-index: 1;
  }

  @media (max-width: 500px) {
    .container {
    }

    .box,
    .box-pista,
    .box-respuesta {
      & main {
        width: 300px;
        min-height: 300px;
      }
    }
  }
</style>

<script>
  import acertijosData from "./acertijos.json";

  document.addEventListener("astro:page-load", () => {
    const acertijos = acertijosData;

    const btnPista = document.querySelector("#btnPista");
    const btnRespuesta = document.querySelectorAll(".btnRespuesta");
    const btnAcertijo = document.querySelectorAll(".btnAcertijo");
    const btnNext = document.querySelector("#btnNext");

    const acertijo = document.querySelector(".box");
    const pista = document.querySelector(".box-pista");
    const respuesta = document.querySelector(".box-respuesta");
    const acertijoNumero = document.querySelectorAll(".acertijo-numero");

    btnPista.addEventListener("click", () => {
      acertijo.classList.add("hide");
      pista.classList.add("show");
    });

    btnAcertijo.forEach((btn) => {
      btn.addEventListener("click", () => {
        acertijo.classList.remove("hide");
        pista.classList.remove("show");
        respuesta.classList.remove("show");
      });
    });

    btnRespuesta.forEach((btn) => {
      btn.addEventListener("click", () => {
        acertijo.classList.add("hide");
        pista.classList.remove("show");
        respuesta.classList.add("show");
      });
    });

    if (localStorage.getItem("acertijoNumero") === null) {
      localStorage.setItem("acertijoNumero", "0");
    }

    function nextRiddle() {
      /*       const currentRiddleIndex = Math.floor(Math.random() * acertijos.length); */
      const currentRiddleIndex = parseInt(
        localStorage.getItem("acertijoNumero")
      );
      const currentRiddle = acertijos[currentRiddleIndex];
      acertijoNumero.forEach((num) => {
        //@ts-ignore
        num.innerText = currentRiddle.id;
      });

      document.getElementById("acertijo").innerText = currentRiddle.acertijo;
      document.getElementById("pista").innerText = currentRiddle.pista;

      setTimeout(() => {
        document.getElementById("respuesta").innerText =
          currentRiddle.respuesta;
      }, 500);
    }

    btnNext.addEventListener("click", () => {
      localStorage.setItem(
        "acertijoNumero",
        (parseInt(localStorage.getItem("acertijoNumero")) + 1).toString()
      );
      acertijo.classList.remove("hide");
      pista.classList.remove("show");
      respuesta.classList.remove("show");

      nextRiddle();
    });

    // Inicializar con el primer riddle
    nextRiddle();
  });
</script>
