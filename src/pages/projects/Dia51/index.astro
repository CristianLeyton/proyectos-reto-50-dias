---
import LayoutProyecto from "../../../layouts/LayoutProyecto.astro";
---

<LayoutProyecto title="DÃ­a 51" subtitle="Acertijos">
  <div class="container dia51">
    <div class="container">
      <div class="container-fondo"></div>

      <header>
        <button id="btnAnteriorAcertijo" title="Acertijo anterior">ðŸ”½</button>

        <form id="formAcertijo">
          <input type="number" id="inputAcertijo" min="0" />
        </form>
        <button id="btnSiguienteAcertijo" title="Acertijo siguiene">ðŸ”¼</button>

        <button id="randomAcertijo" title="Acertijo aleatorio"> ðŸ”€ </button>
      </header>

      <!-- Acertijo caja -->
      <section class="box">
        <main>
          <h2 class="title">
            Acertijo <span class="acertijo-numero">00</span>
