<LayoutProyecto title="Día 51" subtitle="Acertijos">
  <div class="container dia51">
    <div class="container">
      <div class="container-fondo"></div>
      <section class="box">
        <main>
          <h2 class="title">Acertijo</h2>
          <p id="acertijo" class="acertijo">Pensando en un acertijo...</p>

          <div class="buttons-actions">
            <button id="btnPista" class="btn"> Ver pista </button>
            <button id="btnRespuesta" class="btn btnRespuesta">
              Ver respuesta
            </button>
          </div>
        </main>
      </section>

      <section class="box-pista hide">
        <main>
          <h2 class="title">Pista</h2>
          <p id="pista" class="pista">Aqui va la pista...</p>
          <div class="buttons-actions">
            <button id="btnAcertijo" class="btn btnAcertijo">
              Ver acertijo
            </button>
            <button id="btnRespuesta" class="btn btnRespuesta">
              Ver respuesta
            </button>
          </div>
        </main>
      </section>

      <section class="box-respuesta hide">
        <main>
          <h2 class="title">Respuesta</h2>
          <p id="respuesta" class="respuesta">Aqui va la respuesta...</p>
          <div class="buttons-actions">
            <button id="btnAcertijo" class="btn btnAcertijo">
              Ver acertijo
            </button>
            <button id="btnNext" class="btn"> Siguiente acertijo </button>
          </div>
        </main>
      </section>
    </div>
  </div>
</LayoutProyecto>

<style>
  .dia51 {
    min-height: 70vh;
    display: grid;
    place-content: center;
  }

  .container {
    display: flex;
    height: 70vh;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .container-fondo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--celeste);
    z-index: -2;
  }

  .box,
  .box-pista,
  .box-respuesta {
    background-color: #f8fafc;
    border-radius: 12px;
    box-shadow:
      0 10px 20px rgba(0, 0, 0, 0.1),
      0 6px 6px rgba(0, 0, 0, 0.1);

    & main {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-around;
      padding: 1rem;
      width: 400px;
      min-height: 250px;
      height: fit-content;
    }
  }

  .title {
    font-weight: bolder;
    color: var(--text-color-secondary);
  }

  .acertijo,
  .pista,
  .respuesta {
    text-align: center;
    color: var(--text-color);
    text-wrap: pretty;
    font-size: large;
    font-weight: bold;
    height: fit-content;
    padding: 1rem;
  }

  .btn {
    background-color: var(--naranja-claro);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: #fff;
    font-weight: bold;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.1);

    &:hover {
      transform: scale(1.02);
    }

    &:active {
      transform: scale(0.99);
    }
  }

  .buttons-actions {
    display: flex;
    gap: 1rem;
    font-size: small;
  }

  .box {
    transition: all 0.5s ease-in-out;
    position: relative;
  }
  .box-pista,
  .box-respuesta {
    transform: rotateY(-180deg);
    transition: all 0.5s ease-in-out;
    opacity: 0;
    position: absolute;
  }

  .hide {
    transform: rotateY(180deg);
    opacity: 0;
    z-index: -1;
  }

  .show {
    transform: rotateY(0deg);
    opacity: 1;
    z-index: 1;
  }

  @media (max-width: 500px) {
    .container {
    }

    .box {
      width: 320px;
      min-height: 320px;
    }
  }
</style>

