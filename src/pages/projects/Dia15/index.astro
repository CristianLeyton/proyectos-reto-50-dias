<style>
  .container {
    display: flex;
    height: 70vh;
    background-color: var(--naranja-claro);
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem;
  }

  .box {
    color: #fff;
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
  }

  .image {
    width: 50px;
    height: 50px;
  }

  .cont {
    font-size: 48px;
    font-family: monospace;
    font-weight: bold;
  }

  .description {
    font-size: 18px;
    font-family: monospace;
    font-weight: bold;
  }
  @media (max-width: 500px) {
    .container {
      flex-direction: column;
      height: fit-content;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const contadores = document.querySelectorAll(".cont");

    if (contadores) {
      contadores.forEach((element) => {
        contador(element);
      });
    }

    function contador(element) {
      let fin = parseInt(element.textContent);
      let i = 0;
      const interval = setInterval(() => {
        element.textContent = i;

        if (i > 1000) {
          i += 50;
        } else {
          i += 5;
        }

        if (i >= fin) {
          clearInterval(interval); // Detiene el intervalo cuando i alcanza 100
          element.textContent = fin;
        }
      }, 5);
    }
  });
</script>
